{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Run Main Async Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "launch_host.py",
      "args": [],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/sleeping_beauty"
    },
    {
      "name": "Auth Status",
      "type": "debugpy",
      "request": "launch",
      "program": "src/sleeping_beauty/launch_host.py",
      "args": ["auth", "--config", "configs/config.yaml", "status"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Auth Login",
      "type": "debugpy",
      "request": "launch",
      "program": "src/sleeping_beauty/launch_host.py",
      "args": ["auth", "--config", "configs/config.yaml", "login"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Auth Revoke",
      "type": "debugpy",
      "request": "launch",
      "program": "src/sleeping_beauty/launch_host.py",
      "args": ["auth", "--config", "configs/config.yaml", "revoke"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Sleep Summary",
      "type": "debugpy",
      "request": "launch",
      "program": "src/sleeping_beauty/launch_host.py",
      "args": [
        "sleep",
        "summary",
        "--config",
        "configs/config.yaml",
        "--view",
        "month"
        // "--start-date",
        // "2026-01-09"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
